---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Dev Projects 👨🏽‍💻</div>
  </div>

  <HorizontalCard
    title="Chest Radiography Diagnosis for COVID-19"
    img="/covid-diagnosis.jpg"
    desc="Deep CNN based models for classification of Chest X-Ray Radiography images and localisation of abnormal lung legions"
    url="https://github.com/arunpandian7/skywatch-ai"
    badge="Research"
    tags="FastAPI,Fast R-CNN, PyTorch"
  />

  <HorizontalCard
    title="SkywatchAI"
    img="/skywatch-ai.jpeg"
    desc="A full stack facial recognition and verification suite along with database integration deployed as API Server"
    url="https://github.com/arunpandian7/skywatch-ai"
    tags="MTCNN, FaceNet, FastAPI"
  />
  <HorizontalCard
    title="DuoPair Bluetooth"
    img="/bluetooth-duopair.png"
    desc="Tool to enable and sync bluetooth devices pair easily on an Dual Boot/Multi-Boot machine."
    url="https://github.com/arunpandian7/DuoPair-Bluetooth"
    tags="Python, Bash, Powershell"
  />
  <HorizontalCard
    title="Melanoma Classification"
    img="/melanoma.png"
    desc="Proposed a stacked architecture consist of EfficientNet and ResNets for SIIM-ISIC Kaggle Completion. Finshed in top 40%"
    url="https://github.com/arunpandian7/Sentiment-Analysis"
    tags="PyTorch, XLA TPU, Albumentation"
    badge="Kaggle"
  />
  <HorizontalCard
    title="Sentiment Analyser"
    img="/sentiment.webp"
    desc="LSTM based NLP model that classifies and segment social media interactions into different sentiments for making analysis"
    url="https://github.com/arunpandian7/Sentiment-Analysis"
    tags="Tensorflow,React.js,LSTM"
  />
  <HorizontalCard
    title="Digit Recognizer"
    img="/digit-recongizer.webp"
    desc="It's my first step into learning machine learning. LeNet inspired CNN Architecture model designed to do multi class classification with 99% benchmark accuracy"
    url="https://github.com/arunpandian7/Digit-Recognizer"
    tags="Tensorflow,React.js,LSTM"
  />
</BaseLayout>
