---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hello there 👋</div>
    <div class="text-5xl font-bold">I'm Arun Pandian R 👨🏽‍💻</div>
    <div class="text-3xl py-3 font-bold">Developer and Tech Evangelist</div>
    <div class="py-2">
      <text class="text-lg">
          Welcome to my personal portfolio and blog. Take a look at my research and development works, blogs and my career overview. I am ardent follower of Artificial Intelligence, Consumer Tech, and Future Tech Research.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn btn-primary hover:bg-primary-focus hover:border-primary-focus" href="https://twitter.com/arunpandian_r7" target="_blank"> Let's connect!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Featured <span class="text-accent">Works 🏗️</span></div>
  </div>

  <HorizontalCard
    title="Chest Radiography Diagnosis for COVID-19"
    img="/covid-diagnosis.jpg"
    desc="Deep CNN based models for classification of Chest X-Ray Radiography images and localisation of abnormal lung legions"
    url="https://github.com/arunpandian7/skywatch-ai"
    badge="Research"
    tags="FastAPI,Fast R-CNN, PyTorch"
  />

  <HorizontalCard
    title="SkywatchAI"
    img="/skywatch-ai.jpeg"
    desc="A full stack facial recognition and verification suite along with database integration deployed as API Server"
    url="https://github.com/arunpandian7/skywatch-ai"
    tags="MTCNN, FaceNet, FastAPI"
  />

  <HorizontalCard
    title="Sentiment Analyser"
    img="/sentiment-analysis.png"
    desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    url="https://github.com/arunpandian7/Sentiment-Analysis"
    tags="Tensorflow,React.js,LSTM"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from the <span class="text-accent">Blog 📖</span></div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
      </>
    ))
  }
</BaseLayout>
