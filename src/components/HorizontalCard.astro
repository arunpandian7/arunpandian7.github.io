---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div
  class="rounded-xl hover:shadow-xl transition ease-in-out hover:scale-[102%] bg-base-200 my-4"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img ? (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />) : (
            <Image
              src="/post_img.webp"
              aspectRatio="16:9"
              width={750}
              format="webp"
              alt={title}
              class="max-w-full md:max-w-[13rem] rounded-lg"
            />
          )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.split(',').map((tag) => <div class="badge badge-outline font-mono bg-primary text-base-200">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
